# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
# Default analysis mode: 'comprehensive' (GPT-5), 'comprehensive-claude' (Claude 3.5 Sonnet), or 'fast' (GPT-4o-mini)
# Users can override this per-request via the UI
OPENAI_MODE=comprehensive

# Anthropic Claude API Configuration (optional - for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_MAX_TOKENS=2000
# GPT-5 comprehensive analysis needs longer timeouts (360s recommended, increased from 180s)
OPENAI_TIMEOUT=360
OPENAI_MAX_RETRIES=3

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Optional: Database Configuration (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost/dbname

# Optional: Redis Configuration (if needed in future)
# REDIS_URL=redis://localhost:6379

# Email Configuration (for contact form)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=noreply@boston-mfg.com
# Note: If SMTP is not configured, contact form submissions will be logged only 